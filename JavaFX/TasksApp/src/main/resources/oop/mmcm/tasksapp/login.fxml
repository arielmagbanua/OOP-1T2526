<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="oop.mmcm.tasksapp.controllers.LoginController">
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>

    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button text="Login" onAction="#onLogin"/>
            <Button text="Register" onAction="#onRegister"/>
        </buttons>
    </ButtonBar>
</VBox>
